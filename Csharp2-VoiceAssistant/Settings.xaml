<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Csharp2_VoiceAssistant.Settings"
             Title="Settings">

    <StackLayout Padding="20">
        <Label Text="Language"
               FontSize="18" />
        <Picker x:Name="LanguagePicker"
                Title="Select Language">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>en</x:String>
                    <x:String>nl</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label Text="Command Recognition Duration (Seconds)"
               FontSize="18"
               Margin="0,20,0,0" />
        <Entry x:Name="DurationEntry"
               Keyboard="Numeric" />

        <Label Text="History Retention Days"
               FontSize="18"
               Margin="0,20,0,0" />
        <Entry x:Name="RetentionEntry"
               Keyboard="Numeric" />

        <Button Text="Save"
                Clicked="OnSaveButtonClicked"
                Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>